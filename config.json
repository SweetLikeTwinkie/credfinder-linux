{
  "scan_paths": {
    "ssh": [
      "~/.ssh/",
      "/etc/ssh/",
      "/home/*/.ssh/",
      "/root/.ssh/"
    ],
    "browsers": {
      "chrome": [
        "~/.config/google-chrome/Default/",
        "~/.config/chromium/Default/",
        "~/.config/brave-browser/Default/"
      ],
      "firefox": [
        "~/.mozilla/firefox/*.default*/",
        "~/.mozilla/firefox/*.default-release/"
      ]
    },
    "config_files": [
      "~/.bash_history",
      "~/.zsh_history",
      "~/.git-credentials",
      "~/.npmrc",
      "~/.pypirc",
      "~/.netrc",
      "~/.aws/credentials",
      "~/.aws/config"
    ],
    "dotfiles": [
      "~/.env*",
      "~/.config/*/config.yml",
      "~/.config/*/secrets.json",
      "~/.config/*/settings.json"
    ]
  },
  "patterns": {
    "aws_keys": [
      "AKIA[0-9A-Z]{16}",
      "aws_access_key_id\\s*=\\s*[A-Z0-9]{20}",
      "aws_secret_access_key\\s*=\\s*[A-Za-z0-9/+=]{40}"
    ],
    "api_tokens": [
      "sk_[a-zA-Z0-9]{24}",
      "pk_[a-zA-Z0-9]{24}",
      "ghp_[a-zA-Z0-9]{36}",
      "gho_[a-zA-Z0-9]{36}",
      "ghu_[a-zA-Z0-9]{36}",
      "ghs_[a-zA-Z0-9]{36}",
      "ghr_[a-zA-Z0-9]{36}"
    ],
    "jwt_tokens": [
      "eyJ[A-Za-z0-9-_=]+\\.[A-Za-z0-9-_=]+\\.?[A-Za-z0-9-_.+/=]*"
    ],
    "passwords": [
      "password\\s*[:=]\\s*[^\\s]+",
      "passwd\\s*[:=]\\s*[^\\s]+",
      "secret\\s*[:=]\\s*[^\\s]+"
    ]
  },
  "opsec": {
    "minimal_logging": true,
    "no_network_calls": true,
    "clean_exit": true,
    "file_permissions": "600"
  },
  "output": {
    "formats": ["json", "html", "csv", "console"],
    "default_format": "json",
    "report_template": "templates/report.html",
    "output_dir": "./reports"
  },
  "modules": {
    "ssh": true,
    "browser": true,
    "keyring": true,
    "memory": true,
    "dotfiles": true,
    "history": true,
    "keylogger": false,
    "clipboard": false
  }
} 